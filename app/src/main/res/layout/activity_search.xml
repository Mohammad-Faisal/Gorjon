<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".general.SearchActivity"
    android:theme="@style/fullscreen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:transitionName="search_icon"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_search_icon"/>

            <EditText
                android:id="@+id/search_text_input"
                android:hint="type name or user id here...."
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_search"
                />

        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/background_message_text"
                android:textAlignment="center"
                android:id="@+id/search_activity_district"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <TextView
                android:background="@drawable/background_message_text"
                android:textAlignment="center"
                android:id="@+id/search_activity_category"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <TextView
                android:background="@drawable/background_message_text"
                android:textAlignment="center"
                android:id="@+id/search_activity_blood"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />


        </LinearLayout>




        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_activity_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>





    </LinearLayout>






</LinearLayout>