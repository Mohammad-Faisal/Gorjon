<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="10dp"
        android:id="@+id/item_event_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_height="300dp"
                android:src="@drawable/ic_camera_icon"
                android:id="@+id/item_event_image"
                android:layout_width="match_parent"
                />

            <TextView
                android:id="@+id/item_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/Black"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location_green"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/item_event_locaiton"
                        android:text="Dhaka Bangladesh"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clock_blue"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/item_event_date"
                        android:text="Monday 2017"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person_icon"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/item_event_people_cnt"
                        android:text="100 people"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_comment_black"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/item_event_comment_cnt"
                        android:text="0 comment"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>






    </android.support.v7.widget.CardView>



</RelativeLayout>